<!-- <~SCREEN NAME)> {Main} </~SCREEN NAME> -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:androidfont="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/main_bg"
              android:gravity="center|top"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <FrameLayout
        android:id="@+id/main_menu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">

        <ImageView
            android:layout_width="26.95dp"
            android:layout_height="19.13dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="23.18dp"
            android:layout_marginTop="18.84dp"
            android:contentDescription="@string/image"
            android:scaleType="fitCenter"
            android:src="@drawable/list"/>
    </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            />

    <FrameLayout
        android:id="@+id/setting"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="23.18dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/image"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_btn_setting"/>
    </FrameLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="153.33dp"
        android:layout_height="22.31dp"
        android:layout_gravity="center"
        android:layout_marginBottom="46dp"
        android:layout_marginTop="46.69dp"
        android:contentDescription="@string/image"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="223.76dp"
        android:gravity="center">

        <ImageView
            android:layout_width="223.76dp"
            android:layout_height="223.76dp"
            android:layout_gravity="center"
            android:contentDescription="@string/image"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/suprema_ring"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="223.76dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.supremainc.biostar2.widget.StyledTextView
                android:id="@+id/display_marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                androidfont:typeface="roboto_regular.ttf"/>

            <com.supremainc.biostar2.widget.StyledTextView
                android:id="@+id/display_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="50dp"
                androidfont:typeface="roboto_regular.ttf"/>

            <com.supremainc.biostar2.widget.StyledTextView
                android:id="@+id/display_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                androidfont:typeface="roboto_regular.ttf"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="58.26dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:gravity="center|top"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/main_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64.92dp"
                    android:layout_height="64.92dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="11.59dp"
                    android:contentDescription="@string/image"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_btn_user"/>

                <com.supremainc.biostar2.widget.StyledTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/user_upper"
                    android:textColor="@drawable/selector_color_white_yellow"
                    android:textSize="12dp"
                    androidfont:typeface="roboto_medium.ttf"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_door"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64.92dp"
                    android:layout_height="64.92dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="11.59dp"
                    android:contentDescription="@string/image"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_btn_door"/>

                <com.supremainc.biostar2.widget.StyledTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/door_upper"
                    android:textColor="@drawable/selector_color_white_yellow"
                    android:textSize="12dp"
                    androidfont:typeface="roboto_medium.ttf"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_monitor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64.92dp"
                    android:layout_height="64.92dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="11.59dp"
                    android:contentDescription="@string/image"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_btn_monitor"/>

                <com.supremainc.biostar2.widget.StyledTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/monitoring_upper"
                    android:textColor="@drawable/selector_color_white_yellow"
                    android:textSize="12dp"
                    androidfont:typeface="roboto_medium.ttf"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_alarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="64.92dp"
                    android:layout_marginBottom="11.59dp"
                    android:layout_height="64.92dp">
                <ImageView
                    android:layout_width="64.92dp"
                    android:layout_height="64.92dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_btn_alarm"/>

                <com.supremainc.biostar2.widget.StyledTextView
                    android:id="@+id/main_alarm_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center|top"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:padding="2dp"
                    android:text="0"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/alarm_badge"
                    androidfont:typeface="roboto_medium.ttf"/>
                </FrameLayout>

                <com.supremainc.biostar2.widget.StyledTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/alarm_upper"
                    android:textColor="@drawable/selector_color_white_yellow"
                    android:textSize="12dp"
                    androidfont:typeface="roboto_medium.ttf"/>
            </LinearLayout>

            <!--
            <LinearLayout
                android:id="@+id/main_ta"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12.67dp"
                    android:contentDescription="@string/image"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_ta" />

                <com.supremainc.biostar2.widget.StyledTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ta"
                    android:textColor="@drawable/selector_gray_to_white"
                    android:textSize="9.33dp"
                    androidfont:typeface="roboto.ttf" />
            </LinearLayout>
            -->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>