<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidfont="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:background="@drawable/card_box"
    android:gravity="top|left"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="12dp"
        android:gravity="top|left"
        android:orientation="horizontal">

        <com.supremainc.biostar2.view.StyledTextView
            android:id="@+id/card_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:gravity="left|top"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/drawer_top"
            android:textSize="11dp"
            androidfont:typeface="roboto_bold.ttf" />

        <com.supremainc.biostar2.view.SwitchView
            android:id="@+id/card_switch"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_gravity="top|right"
            android:layout_marginRight="12dp"
            android:gravity="top|right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/switch_onoff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|right"
                android:contentDescription="@string/image"
                android:gravity="top|right"
                android:scaleType="fitXY"
                android:src="@drawable/toggle2_on" />
        </com.supremainc.biostar2.view.SwitchView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:gravity="top|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="71dp"
            android:layout_height="94dp"
            android:layout_gravity="top|left"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/image"
            android:scaleType="centerCrop"
            android:src="@drawable/card_photo_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top|left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:orientation="vertical">

                <com.supremainc.biostar2.view.StyledTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:gravity="left|top"
                    android:text="@string/card_id"
                    android:textColor="@color/drawer_top_50"
                    android:textSize="7dp"
                    androidfont:typeface="roboto_medium.ttf" />

                <com.supremainc.biostar2.view.StyledTextView
                    android:id="@+id/card_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:ellipsize="end"
                    android:gravity="left|top"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/drawer_top"
                    android:textSize="16dp"
                    androidfont:typeface="roboto_medium.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top|left"
                    android:orientation="vertical">

                    <com.supremainc.biostar2.view.StyledTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:gravity="top|left"
                        android:maxLines="1"
                        android:text="@string/credential"
                        android:textColor="@color/drawer_top_50"
                        android:textSize="7dp"
                        androidfont:typeface="roboto_medium.ttf" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="top|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center|left"
                            android:layout_marginRight="4.5dp"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/user_ic_fingerprint" />

                        <com.supremainc.biostar2.view.StyledTextView
                            android:id="@+id/fingerprint_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginRight="9dp"
                            android:gravity="top|left"
                            android:maxLines="1"
                            android:text="0"
                            android:textColor="@color/drawer_top"
                            android:textSize="10dp"
                            androidfont:typeface="roboto_medium.ttf" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center|left"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/user_ic_pin" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="45dp"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:orientation="vertical">

                    <com.supremainc.biostar2.view.StyledTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:gravity="top|left"
                        android:maxLines="1"
                        android:text="@string/access_group"
                        android:textColor="@color/drawer_top_50"
                        android:textSize="7dp"
                        androidfont:typeface="roboto_medium.ttf" />

                    <com.supremainc.biostar2.view.StyledTextView
                        android:id="@+id/access_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:gravity="top|left"
                        android:maxLines="2"
                        android:text="0"
                        android:textColor="@color/drawer_top"
                        android:textSize="10dp"
                        androidfont:typeface="roboto_medium.ttf" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|left"
                android:orientation="vertical">

                <com.supremainc.biostar2.view.StyledTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="bottom|left"
                    android:maxLines="1"
                    android:text="@string/period"
                    android:textColor="@color/drawer_top_50"
                    android:textSize="7dp"
                    androidfont:typeface="roboto_medium.ttf" />

                <com.supremainc.biostar2.view.StyledTextView
                    android:id="@+id/period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="bottom|left"
                    android:maxLines="1"
                    android:textColor="@color/drawer_top"
                    android:textSize="9dp"
                    androidfont:typeface="roboto_medium.ttf" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.supremainc.biostar2.view.StyledTextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="12dp"
        android:ellipsize="middle"
        android:gravity="top|left"
        android:maxLines="2"
        android:text="0"
        android:textColor="@color/drawer_top"
        android:textSize="14dp"
        androidfont:typeface="roboto_medium.ttf" />

</LinearLayout>