<?xml version="1.0" encoding="utf-8"?><!-- <~SCREEN NAME)> {User_List} </~SCREEN NAME> -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:androidfont="http://schemas.android.com/apk/res-auto"
              android:id="@+id/user_container"
              android:layout_width="match_parent"
              android:layout_height="68dp"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_picture"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginRight="18dp"
            android:contentDescription="@string/image"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/user_06"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="vertical">

            <com.supremainc.biostar2.view.StyledTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="@color/select_text"
                android:textSize="16dp"
                androidfont:typeface="roboto_bold.ttf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:orientation="horizontal">

                <com.supremainc.biostar2.view.StyledTextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="9dp"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/actionbar_bg"
                    android:textSize="14dp"
                    androidfont:typeface="roboto_medium.ttf"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"/>

                <ImageView
                    android:id="@+id/user_ic_fingerprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="4.5dp"
                    android:contentDescription="@string/image"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_ic_fingerprint"/>

                <ImageView
                    android:id="@+id/user_ic_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="4.5dp"
                    android:contentDescription="@string/image"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_ic_card"/>

                <ImageView
                    android:id="@+id/user_ic_face"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="4.5dp"
                    android:contentDescription="@string/image"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_ic_face"/>

                <ImageView
                    android:id="@+id/user_ic_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="4.5dp"
                    android:contentDescription="@string/image"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_ic_pin"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="22.67dp"
            android:layout_height="22.67dp">

            <ImageView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:contentDescription="@string/image"
                android:gravity="center|right"
                android:scaleType="fitXY"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/list_devider"/>

</LinearLayout>