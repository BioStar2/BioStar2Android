<?xml version="1.0" encoding="utf-8"?><!-- <~SCREEN NAME)> {Monitoring} </~SCREEN NAME> -->
<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidfont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3.8dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginRight="18dp"
            android:contentDescription="@string/image"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/monitoring_ic3"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.supremainc.biostar2.widget.StyledTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:gravity="left"
                android:maxLines="2"
                android:textColor="@color/select_text"
                android:textSize="16dp"
                androidfont:typeface="roboto_bold.ttf"/>

            <com.supremainc.biostar2.widget.StyledTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:textSize="14dp"
                androidfont:typeface="roboto_medium.ttf"/>

            <com.supremainc.biostar2.widget.StyledTextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:textSize="14dp"
                androidfont:typeface="roboto_medium.ttf"/>

            <com.supremainc.biostar2.widget.StyledTextView
                android:id="@+id/device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:textSize="14dp"
                androidfont:typeface="roboto_medium.ttf"/>
            <!--
            <com.supremainc.biostar2.widget.StyledTextView
                android:id="@+id/door_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/gray_2"
                android:textSize="13.33dp"
                androidfont:typeface="roboto_medium.ttf" /> -->
        </LinearLayout>

        <ImageView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/image"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_01"/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/list_devider"/>

</LinearLayout>