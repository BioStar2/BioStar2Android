<?xml version="1.0" encoding="utf-8"?><!-- <~SCREEN NAME)> {Door_List} </~SCREEN NAME> -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:androidfont="http://schemas.android.com/apk/res-auto"
              android:id="@+id/user_container"
              android:layout_width="match_parent"
              android:layout_height="68dp"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginRight="18dp"
            android:contentDescription="@string/image"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/door_ic_3"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="vertical">

            <com.supremainc.biostar2.view.StyledTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="@color/select_text"
                android:textSize="16dp"
                androidfont:typeface="roboto_bold.ttf"/>

            <com.supremainc.biostar2.view.StyledTextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="2"
                android:textColor="@color/actionbar_bg"
                android:textSize="14dp"
                androidfont:typeface="roboto_medium.ttf"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="22.67dp"
            android:layout_height="22.67dp">

            <ImageView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:contentDescription="@string/image"
                android:gravity="center|right"
                android:scaleType="fitXY"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/list_devider"/>

</LinearLayout>