<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:androidfont="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical|left"
              android:background="@color/door_summary"
              android:gravity="center_vertical|left"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:gravity="top|center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="26dp"
            android:layout_weight="1"
            android:gravity="top|left"
            android:orientation="vertical">

            <com.supremainc.biostar2.view.StyledTextView
                android:id="@+id/title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:gravity="left|top"
                android:singleLine="true"
                android:textColor="@color/user_total"
                android:textSize="16dp"
                androidfont:typeface="roboto_bold.ttf"/>

            <com.supremainc.biostar2.view.StyledTextView
                android:id="@+id/title_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:ellipsize="end"
                android:gravity="left|top"
                android:maxLines="3"
                android:textColor="@color/user_total"
                android:textSize="14dp"
                androidfont:typeface="roboto_bold.ttf"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="26dp"
            android:contentDescription="@string/image"
            android:scaleType="fitXY"
            android:src="@drawable/door_ic_3"/>
    </LinearLayout>

    <com.supremainc.biostar2.view.StyledTextView
        android:id="@+id/door_control"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/selector_btn_round_ok"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/door_control"
        android:textColor="@color/white"
        android:textSize="16dp"
        androidfont:typeface="roboto_bold.ttf"/>
</LinearLayout>

